
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Weather information -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/weather_info_height"
        android:background="@color/light_green"
        android:paddingBottom="@dimen/padding_large">

        <!-- Weather icon in the center -->
        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/cloudy"
            android:layout_centerInParent="true" />

        <!-- Temperature below the icon -->
        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperature"
            android:textSize="@dimen/temp_text_size"
            android:textColor="@color/textColorBlack"
            android:layout_below="@id/weather_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium" />

        <!-- City name aligned to the right -->
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city_name"
            android:textSize="@dimen/city_text_size"
            android:textColor="@color/textColorBlack"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- Days of the Week Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Monday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="@dimen/padding_medium"
            android:background="@color/light_blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/monday"
                android:textSize="@dimen/day_text_size"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_weight="3" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:src="@drawable/rainy"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/showers_temp_range"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6" />
        </LinearLayout>

        <!-- Tuesday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="@dimen/padding_medium"
            android:background="@color/light_blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tuesday"
                android:textSize="@dimen/day_text_size"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_weight="3" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:src="@drawable/cloudy"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/cloudy_temp_range"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6" />
        </LinearLayout>

        <!-- Wednesday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="@dimen/padding_medium"
            android:background="@color/light_blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/wednesday"
                android:textSize="@dimen/day_text_size"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_weight="3" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:src="@drawable/sunny"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sunny_temp_range"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6" />
        </LinearLayout>

        <!-- Thursday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="@dimen/padding_medium"
            android:background="@color/light_blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/thursday"
                android:textSize="@dimen/day_text_size"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_weight="3" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:src="@drawable/sunny"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sunny_temp_range"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6" />
        </LinearLayout>

        <!-- Friday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="@dimen/padding_medium"
            android:background="@color/light_blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/friday"
                android:textSize="@dimen/day_text_size"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_weight="3" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:src="@drawable/rainy"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/heavy_rain_temp_range"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6" />
        </LinearLayout>

        <!-- Saturday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="@dimen/padding_medium"
            android:background="@color/light_blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/saturday"
                android:textSize="@dimen/day_text_size"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_weight="3" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:src="@drawable/thunderstorms"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/thunderstorms_temp_range"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6" />
        </LinearLayout>

        <!-- Sunday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="@dimen/padding_medium"
            android:background="@color/light_blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sunday"
                android:textSize="@dimen/day_text_size"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_weight="3" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:src="@drawable/rainy"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/light_showers_temp_range"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
